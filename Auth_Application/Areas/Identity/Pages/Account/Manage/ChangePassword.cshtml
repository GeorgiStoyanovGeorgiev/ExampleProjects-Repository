@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Промяна на паролата";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="mng-title-center mng-title">@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="mng-input-groups">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="mng-title-sub" asp-for="Input.OldPassword"></label>
                <input asp-for="Input.OldPassword" class="mng-input" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="mng-title-sub" asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="mng-input" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="mng-title-sub" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="mng-input" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="mng-form-btn">Обновяване на парола</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
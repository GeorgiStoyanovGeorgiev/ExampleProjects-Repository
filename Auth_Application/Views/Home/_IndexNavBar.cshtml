@using Microsoft.AspNetCore.Identity
@using Auth_Application.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<nav class="main-navbar">
    @if (SignInManager.IsSignedIn(User))
    {
        <ul class="navbar-nav tn-btn-area-logged">
            <li class="tn-btn">
                <a id="manage" class="tn-acc-btn" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                    Акаунт
                </a>
            </li>
            <li class="tn-btn">
                <a id="logoutForm" class="tn-logout-btn" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    Изход
                </a>
            </li>
        </ul>
    }
    else
    {
        <ul class="navbar-nav tn-btn-area">
            <li class="tn-btn">
                <a class="tn-reg-btn" id="register" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
            </li>
            <li class="tn-btn">
                <a class="tn-log-btn" id="login" asp-area="Identity" asp-page="/Account/Login">Вписване</a>
            </li>
        </ul>
    }
</nav>

@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";

}




<div class="input-groups">

    <h1 class="form-title">@ViewData["Title"]</h1>
    <h4 class="form-title-sub">Създаване на нов акаунт.</h4>
    <hr />

    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

        <div class="form-group">

            <input asp-for="Input.UserName" class="input" placeholder="Потребителско име" />
            <span asp-validation-for="Input.UserName" class="text-warning-custom"></span>
        </div>
        <div class="form-group">

            <input asp-for="Input.Email" class="input" placeholder="Имейл адрес" />
            <span asp-validation-for="Input.Email" class="text-warning-custom"></span>
        </div>
        <div class="form-group">

            <input asp-for="Input.Password" class="input" placeholder="Парола" />
            <span asp-validation-for="Input.Password" class="text-warning-custom"></span>
        </div>
        <div class="form-group">

            <input asp-for="Input.ConfirmPassword" class="input" placeholder="Потвърди паролата" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-warning-custom"></span>
        </div>
        <button type="submit" class="reg-form-btn">Регистриране</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model IndexModel
@{
    ViewData["Title"] = "Профил";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="mng-title-center mng-title">@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="mng-input-groups">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="mng-title-sub" asp-for="Username"></label>
                <input asp-for="Username" class="mng-input" disabled />
            </div>
            <div class="form-group">
                <label class="mng-title-sub" asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="mng-input" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="mng-form-btn">Запази</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}